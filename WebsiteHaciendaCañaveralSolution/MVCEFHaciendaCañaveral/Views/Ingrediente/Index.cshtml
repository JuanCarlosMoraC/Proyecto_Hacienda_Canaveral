@model IEnumerable<MVCEFHaciendaCañaveral.Models.Ingrediente>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Receta.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayName("Imagen")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Receta.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            <img src="@Url.Action("Preview", new {file=item.UrlImagen})" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdIngrediente }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdIngrediente }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdIngrediente })
        </td>
    </tr>
}

</table>
